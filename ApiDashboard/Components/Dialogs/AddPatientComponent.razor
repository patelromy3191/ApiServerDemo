        <MudTextField Value="@Patient.Id.ToString()" Label="Server ID" ReadOnly="true" />
        <MudTextField Value="@Patient.Name" Label="Name" ReadOnly="true" />
        <MudTextField Value="@Patient.Address" Label="Address" ReadOnly="true" />
        <MudTextField Value="@Patient.Email" Label="Email" ReadOnly="true" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Error" OnClick="AddPatient">Delete Server</MudButton>
    </DialogActions>
